<UserControl x:Class="WPFTracker.Controls.Feedback"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
    <Popup x:Name="FeedbackPopup" IsOpen="False" StaysOpen="True" Width="500" d:IsOpen="True" >
        <Grid Background="White">
            <TextBox x:Name="IssueDetails"   HorizontalAlignment="Center" Margin="0,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="500" Height="300" />
            <Button Content="Submit" HorizontalAlignment="Center" Margin="0,401,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.077,0.325" Height="26" Width="79" Click="Button_Click"/>
        </Grid>
    </Popup>
</UserControl>
