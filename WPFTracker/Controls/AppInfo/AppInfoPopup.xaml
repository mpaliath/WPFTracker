<UserControl x:Class="WPFTracker.Controls.AppInfoPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFTracker.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Popup x:Name="InputPopup" IsOpen="False" StaysOpen="True" Opened="InputPopup_Opened" Width="500">
            <local:AppInfoControl x:Name="InnerControl" KeyDown="InnerControl_KeyDown" />
        </Popup>
    </Grid>
</UserControl>
