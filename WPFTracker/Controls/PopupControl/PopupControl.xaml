<!-- This is the PopupControl that inherits from Popup -->
<Popup x:Class="WPFTracker.Controls.PopupControl"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- This is the ContentPresenter that hosts the user control -->
    <ContentPresenter Content="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Popup}}, Path=Content}"/>
</Popup>
