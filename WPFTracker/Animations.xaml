<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Storyboard x:Key="ShakeAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(Popup.HorizontalOffset)" From="-10" To="10" Duration="0:0:0.05" AutoReverse="True" RepeatBehavior="3x"/>
        <ColorAnimation Storyboard.TargetName="PopupBorder" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="Black" Duration="0:0:0.15" AutoReverse="True"/>
    </Storyboard>
</ResourceDictionary>