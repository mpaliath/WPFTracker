<Window x:Class="WPFTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:localcontrols="clr-namespace:WPFTracker.Controls" 
        xmlns:wpftracker="clr-namespace:WPFTracker"
        DataContext="{x:Static wpftracker:PersistentTracker.Instance}"
        Title="MainWindow">

    <Grid>
        <localcontrols:AppInfoControl x:Name="AppInfoPopup"></localcontrols:AppInfoControl>
    <StackPanel Orientation="Horizontal">
        <StackPanel>
            <Border BorderBrush="Black" BorderThickness="1">
                <Grid MouseLeftButtonDown="TextBlock1_MouseLeftButtonDown">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Margin="0,0,5,0" FontFamily="Segoe UI" FontSize="24" FontWeight="Bold" FontStyle="Italic" Foreground="Black">Apps Filed Today: </TextBlock>
                        <TextBlock Grid.Column="1" Margin="0,0,10,0" FontFamily="Segoe UI" FontSize="24" FontWeight="Bold" FontStyle="Italic" Foreground="Red" Text="{Binding FiledTodayCount}" IsHitTestVisible="True"  />
                </Grid>
            </Border>
        </StackPanel>
        <StackPanel>
            <Border BorderBrush="Black" BorderThickness="1">
                <Grid MouseLeftButtonDown="TextBlock2_MouseLeftButtonDown">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Margin="0,0,5,0" FontFamily="Segoe UI" FontSize="24" FontWeight="Bold" FontStyle="Italic" Foreground="Black">Apps Filed:</TextBlock>
                        <TextBlock Grid.Column="1" Margin="0,0,10,0" FontFamily="Segoe UI" FontSize="24" FontWeight="Bold" FontStyle="Italic" Foreground="Black" Text="{Binding FiledTodayCount}" IsHitTestVisible="True"  />
                </Grid>
            </Border>
        </StackPanel>
    </StackPanel>
    </Grid>
</Window>
